{
    "manifest_version": 3,
    "name": "CopyGPT",
    "description": "Share your ChatGPT chat logs with friends or save them to your computer.",
    "version": "1.4",
    "action": {
        "default_title": "CopyGPT",
        "default_icon": {
            "16": "assets/logo16.png",
            "48": "assets/logo48.png",
            "128": "assets/logo128.png"
        }
    },
    "permissions": [
        "clipboardWrite"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "icons": {
        "16": "assets/logo16.png",
        "48": "assets/logo48.png",
        "128": "assets/logo128.png"
    },
    "host_permissions": [
        "https://chat.openai.com/*"
    ]
}